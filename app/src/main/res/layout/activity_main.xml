<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_editor"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:textAlignment="textStart"
                android:textCursorDrawable="@drawable/button_cursor"
                android:hint="@string/type_your_text_here"
                android:background="@drawable/edittextinput"
                android:textColor="@color/black"
                android:inputType="textMultiLine"
                android:gravity="start" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/bold_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="@string/button"
            android:backgroundTint="#00796b"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/italic_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/italic"
            android:backgroundTint="#00796b"
            android:textColor="@color/white"/>

    </LinearLayout>

    <Button
        android:id="@+id/format_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/noformat"
        android:layout_marginTop="30dp"
        android:backgroundTint="#00796b"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal" />

</LinearLayout>